@{
    ViewBag.Title = "Buscar Pagos";
}

<h2>Buscar pagos</h2>


@if (ViewBag.mensaje != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.mensaje
    </div>
}

<form action="TraerPagos" method="post">
    <div class="form-group">
        <label id="mes"> Mes</label>
        <input type="text" placeholder="Ingrese un mes" id="mes" name="mes" />
    </div>

    <div class="form-group">
        <label id="anio"> Anio</label>
        <input type="text" placeholder="Ingrese un anio" id="anio" name="anio" />
    </div>


    <button class="btn btn-primary" type="submit">Buscar</button>
</form>
<br />
<div>
    @Html.ActionLink("Volver", "Index")
</div>