@model Dominio.Cuponera

@{
    ViewBag.Title = "Confirmar Pago";
}

<h2>Confirmar</h2>

@using (Html.BeginForm("ConfirmarCuponera", "Pago"))
{
    @Html.AntiForgeryToken()

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Socio.Cedula)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Socio.Cedula)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Socio.Nombre)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Socio.Nombre)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Importe)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Importe)

    </dd>
    <dd>
        @Html.DisplayFor(model => model.Socio)
    </dd>

</dl>
    <p class="text-info">

        Valido hasta: @ViewBag.mensaje;
    </p>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Pagar" class="btn btn-default" />
        </div>
    </div>
 

}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

